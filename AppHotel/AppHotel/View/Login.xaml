<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppHotel.View.Login"
             BackgroundColor="#836FFF">
    <ContentPage.Content>
        <StackLayout>
            <Frame CornerRadius="10"
                   Margin="20"
                   VerticalOptions="CenterAndExpand"
                   Padding="10"
                   Style="{StaticResource FrameLogin}">
                <StackLayout>
                    <Label Text="Login Hotel"
                           FontSize="Title"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Usuario:"/>
                    <Entry x:Name="txt_Usuario"/>
                    <Label Text="Senha:"/>
                    <Entry IsPassword="True" x:Name="txt_Senha"/>
                    <Button Text="Entrar" Clicked="Button_Clicked"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>